@using System.Diagnostics
@model IEnumerable<WEINCDENTAL.Models.View_HizHareket>

<div id="dinamikTable">

    
    <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-collapsed="false" data-widget-sortable="false" data-widget-deletebutton="false">
        <!-- widget options:
        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

        data-widget-colorbutton="false"
        data-widget-editbutton="false"
        data-widget-togglebutton="false"
        data-widget-deletebutton="false"
        data-widget-fullscreenbutton="false"
        data-widget-custombutton="false"
        data-widget-collapsed="true"
        data-widget-sortable="false"

        -->
        <header>
            <span class="widget-icon"> <i class="fa fa-hospital-o"></i> </span>
            <h2>Hizmetler </h2>

        </header>
        <!-- widget div-->
        <div>
            <!-- widget edit box -->
            <div class="jarviswidget-editbox">
                <!-- This area used as dropdown edit box -->
            </div>
            <!-- end widget edit box -->
            <!-- widget content -->
            <div class="widget-body no-padding">
                <!-- this is what the user will see -->
                <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline no-footer">
                    <!-- start widget head search-->
                    <div class="dt-toolbar no-padding">
                    </div>

                    <!-- end widget head search -->
                    <table id="dt_basic3_1" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <!-- HEAD BAŞLANGICI -->
                                <th data-hide="phone,tablet" class="sorting_asc" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;"><i class="fa fa-fw fa-key text-muted hidden-md hidden-sm hidden-xs"></i> Başvuru Numarası</th>
                                <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" style="width: 50px;"><i class="fa fa-fw fa-key text-muted hidden-md hidden-sm hidden-xs"></i> T.C.</th>
                                <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;"><i class="fa fa-fw  fa-stethoscope text-muted hidden-md hidden-sm hidden-xs"></i> Başvuru Yapan Doktor</th>
                                <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-label=" Name: activate to sort column ascending" style="width: 50px;"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> Başvuru Tarihi</th>
                                <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-label=" Phone: activate to sort column ascending" style="width: 100px;"><i class="fa fa-hospital-o text-muted hidden-md hidden-sm hidden-xs"></i> Hizmet Adı</th>
                                <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3_1" rowspan="1" colspan="1" aria-label=" Name: activate to sort column ascending" style="width: 50px;"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> Hizmet Tarihi</th>
                                <!-- HEAD BİTİŞİ -->
                            </tr>
                        </thead>
                        <tbody>
                            <!-- BODY BAŞLANGICI -->
                            @if (Model != null || Model.Count() != 0)
                            {

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.basvuruid)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.t_tc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Doktoradi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.t_basvurutarihi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hizmetadi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.t_islemtarihi)
                                        </td>


                                    </tr>

                                }

                            }






                            <!-- BODY BİTİŞİ -->
                        </tbody>
                    </table>
                    <!-- start widget footer -->
                    <div class="dt-toolbar-footer no-padding">

                    </div>
                    <!-- end widget footer -->
                </div>
            </div>
            <!-- end widget content -->
        </div>
        <!-- end widget div -->
    </div>
    <!-- end widget -->
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var responsiveHelper_dt_basic = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;
        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };

        $('#dt_basic3_1').dataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
            "preDrawCallback": function () {
                // Initialize the responsive datatables helper once.
                if (!responsiveHelper_dt_basic) {
                    responsiveHelper_dt_basic =
                        new ResponsiveDatatablesHelper($('#dt_basic3_1'), breakpointDefinition);
                }
            },
            "rowCallback": function (nRow) {
                responsiveHelper_dt_basic.createExpandIcon(nRow);
            },
            "drawCallback": function (oSettings) {
                responsiveHelper_dt_basic.respond();
            }
        });



    });
</script>