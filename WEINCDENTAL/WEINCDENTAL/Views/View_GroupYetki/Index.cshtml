
@model IEnumerable<WEINCDENTAL.Models.View_GroupYetki>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-collapsed="false" data-widget-sortable="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-archive"></i> </span>
                <h2>Yetkiler (Grup) </h2>
                <div class="widget-toolbar" role="menu">
                    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#">
                        Yeni Oluştur
                    </button>
                </div>
            </header>

            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->
                </div>
                <div class="widget-body no-padding">
                    <!-- this is what the user will see -->
                    <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline no-footer">
                        <!-- start widget head search-->
                        <div class="dt-toolbar no-padding">
                        </div>
                        <!-- end widget head search -->
                        <table id="dt_basic4" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <!-- HEAD BAŞLANGICI -->
                                    <th data-hide="phone,tablet" class="sorting_asc" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;">User Kod</th>
                                    <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;">Grup Ad</th>
                                    <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-label=" Name: activate to sort column ascending" style="width: 50px;"> Yetki Ad</th>
                                    <th data-hide="tablet" class="sorting" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 68px;">Yetki Açıklama</th>
                                    <th data-hide="tablet" class="sorting" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 68px;"> Method İsmi</th>
                                    <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic4" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 50px;">İşlem Yap</th>
                                    <!-- HEAD BİTİŞİ -->
                                </tr>
                            </thead>
                            <tbody>
                                <!-- BODY BAŞLANGICI -->
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.t_kodu)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.groupAd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.YetkiAdi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.YetkiAciklama)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GorunecekIsim)
                                        </td>
                                        <td>
                                            Düzenle
                                            @*@Html.ActionLink("Düzenle", "../hst_hizmet/Edit", new { id = item.t_id })*@

                                        </td>
                                    </tr>
                                }




                                <!-- BODY BİTİŞİ -->
                            </tbody>
                        </table>
                        <!-- start widget footer -->
                        <div class="dt-toolbar-footer no-padding">
                        </div>
                        <!-- end widget footer -->
                    </div>
                </div>
            </div>

        </div>
    </article>
</div>