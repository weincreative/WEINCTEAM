
@{
    Layout = null;
}

<section id="widget-grid" class="">
    <div class="row">

        <article class="col-sm-12 col-md-12 col-lg-6">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false" data-widget-custombutton="false" data-widget-sortable="false">

                <header>
                    <span class="widget-icon"> <i class="fa fa-check"></i> </span>
                    <h2>Kullanıcı Yeni Yetki Atama </h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body">
                        <div class="row">
                            <form id="wizard-1" novalidate="novalidate">
                                <div id="bootstrap-wizard-1" class="col-sm-12">
                                    <div class="form-bootstrapWizard">
                                        <ul class="bootstrapWizard form-wizard">
                                            <li class="active" data-target="#step1">
                                                <a href="#tab1" data-toggle="tab"> <span class="step">1</span> <span class="title">Kullanıcı Seç</span> </a>
                                            </li>
                                            <li data-target="#step2">
                                                <a href="#tab2" data-toggle="tab"> <span class="step">2</span> <span class="title">Yetki Seç</span> </a>
                                            </li>
                                            <li data-target="#step3">
                                                <a href="#tab3" data-toggle="tab"> <span class="step">3</span> <span class="title">Özet-Kaydet</span> </a>
                                            </li>
                                            @*<li data-target="#step4">
                                                <a href="#tab4" data-toggle="tab"> <span class="step">4</span> <span class="title">Kaydet</span> </a>
                                            </li>*@
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>

                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab1">
                                            <br>
                                            <br>
                                            <h3><strong>Adım 1 </strong> - Kullanıcı Seç</h3>
                                            <br/>
                                            <br/>
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                                            @Html.DropDownList("t_kullanicis", null, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Seçiniz", @Name = "users" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab2">
                                            <br>
                                            <br>
                                            <h3><strong>Adım 2</strong> - Yetki Seç</h3>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <select multiple="multiple" size="10" name="duallistbox_demo2" id="initializeDuallistbox">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                            </div>

                                        </div>
                                        <div class="tab-pane" id="tab3">
                                            <br>
                                            <h3><strong>Adım 3</strong> - Özet ve Kaydet</h3>
                                            <div class="alert alert-warning fade in">
                                                <i class="fa-fw fa fa-warning"></i>
                                                <strong>Seçili Kullanıcı!</strong>
                                                <p></p>
                                                <center><span id="Puser" style="font-weight: bolder;"></span></center>

                                            </div>
                                            <div class="alert alert-info fade in" style="height: 80px;">
                                                <i class="fa-fw fa fa-check"></i>
                                                <strong>Seçili Yetkiler!</strong>
                                                <p ></p>
                                                <center><span id="Pyetkis" style="font-weight: bolder;"></span></center>
                                            </div>
                                            <br>
                                            <div class="col-sm-offset-4">
                                                <a class="btn btn-labeled btn-success" onclick="YetkiKaydet()">
                                                    <span class="btn-label">
                                                        <i class="glyphicon glyphicon-check"></i>
                                                    </span>KAYDET
                                                </a>
                                            </div>
                                           
                                            <br>
                                            <br>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <ul class="pager wizard no-margin">
                                                       
                                                        <li class="previous disabled">
                                                            <a href="javascript:void(0);" class="btn btn-lg btn-default"> Previous </a>
                                                        </li>
                                                        @*<li class="next" id="usersNext" >
                                                            <a href="javascript:void(0);" class="btn btn-lg txt-color-darken" > Next2 </a>
                                                        </li>*@
                                                        <li class="next" >
                                                            <a href="javascript:void(0);" class="btn btn-lg txt-color-darken" id="nextBtn" data-last="Finish"> Next </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>


    </div>
</section>