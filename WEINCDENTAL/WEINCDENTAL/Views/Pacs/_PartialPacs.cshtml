@model IEnumerable<WEINCDENTAL.Models.View_Pacs>


<div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false"
     data-widget-colorbutton="false"
     data-widget-sortable="false"
     data-widget-deletebutton="false">

    <header>
        <span class="widget-icon"> <i class="fa fa-money"></i> </span>
        <h2>Pacs Sorgula </h2>

    </header>
    <!-- widget div-->
    <div>

        <div class="jarviswidget-editbox">

        </div>
        <!-- end widget edit box -->
        <!-- widget content -->

        <div class="widget-body no-padding">
            <!-- this is what the user will see -->
                <div class = "smart-form" >
                    <fieldset style="padding-top: 25px;">

                        <div class="row col-lg-offset-1">
                            <section class="col col-md-3">
                                <label class="input">
                                    <i class="icon-append fa  fa-key"></i>
                                    <input class="form-control" type="text" placeholder="T.C. No ile sorgula" id="Ptc" name="tc">
                                </label>
                            </section>
                            <section class="col col-md-3">
                                <label class="input">
                                     <i class="icon-append fa fa-user"></i>
                                    <input class="form-control" type="text" placeholder="Ad-Soyad ile sorgula" id="PAd" name="ad">
                                </label>
                            </section>
                            <section class="col col-md-2">
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    <input type="text" placeholder="Başlangıç Tarihi" name="Pstartdate" id="Pstartdate" >
                                </label>
                            </section>
                            <section class="col col-md-2">
                                <label class="input">
                                    <i class="icon-append fa fa-calendar"></i>
                                    <input type="text" placeholder="Bitiş Tarihi" name="Pfinishdate" id="Pfinishdate" >
                                </label>
                            </section>
                            <section class="col col-md-2">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button class="btn btn-primary" style="padding: 0 22px;font: 300 15px/29px 'Open Sans',Helvetica,Arial,sans-serif;cursor: pointer;"
                                                type="submit" onclick="GetPacs()">
                                            <i class="fa fa-search"></i> Sorgula
                                        </button>
                                    </div>
                                </div>
                            </section>
                            
                            
                        </div>
                    </fieldset>
                    <fieldset>
                        <center>
                            <div class="row">
                                <section class="col col-md-12">
                                    <div id="TxtKontrol">
                                        <label style='color: red'>
                                             @ViewBag.alanKontrol
                                        </label>
                                    </div>
                                </section>
                            </div>
                           
                        </center>
                    </fieldset>
                   
                </div>
            <hr />
            <div id="loadPacs">

                <fieldset>
                    <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline no-footer">
                        <!-- start widget head search-->
                        <div class="dt-toolbar no-padding">
                        </div>
                        <!-- end widget head search -->
                        <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                            <thead>
                            <tr role="row">
                                <!-- HEAD BAŞLANGICI -->
                                <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 68px;">  T.C.</th>
                                <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 68px;">Ad</th>
                                <th data-hide="expand" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 68px;"> Soyad </th>
                                <th data-class="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 50px;">İşlem Yap</th>
                                <!-- HEAD BİTİŞİ -->
                            </tr>
                            </thead>
                            <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.t_tc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.t_adi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.t_soyadi)
                                    </td>

                                    <td>
                                        <a onclick="location.href='@Url.Action("PacsList",new{tc=@item.t_tc})'" href="javascript:void(0);" class="btn btn-labeled btn-success" title="Görüntüle">
                                            <span class="btn-label">
                                                <i class="glyphicon glyphicon-film"></i>
                                            </span>Görüntüle
                                        </a>

                                    </td>

                                </tr>

                            }


                            </tbody>
                        </table>
                        <!-- start widget footer -->
                        <div class="dt-toolbar-footer no-padding">
                        </div>
                        <!-- end widget footer -->
                    </div>
                </fieldset>
            </div>

        </div>
        <!-- widget edit box -->
        <!-- end widget content -->
    </div>
    <!-- end widget div -->
</div>

    <script type="text/javascript">


        $(document).ready(function () {

            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;
            var breakpointDefinition = {
                tablet: 1360,
                phone: 768
            };

            $('#dt_basic').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "preDrawCallback": function() {
                    // Initialize the responsive datatables helper once.
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic =
                            new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                    }
                },
                "rowCallback": function(nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function(oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });


        });


    </script>
