                                            @*<th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" ><i class="fa fa-fw  fa-bookmark text-muted hidden-md hidden-sm hidden-xs"></i> Hizmet Adı</th>
                                                <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" ><i class="fa fa-fw  fa-money text-muted hidden-md hidden-sm hidden-xs"></i> Hizmet Fiyat (TL)</th>*@

                                            <!-- HEAD BİTİŞİ -->
                                        </tr>
                                    </thead>
                                    <tbody style="cursor:pointer;">
                                        <!-- BODY BAŞLANGICI -->
                                        @foreach (var item in Model)
                                        {
                                            @*<tr>
                                                    <td class="text-danger">
                                                        @Html.DisplayFor(modelItem => item.t_id)
                                                    </td>
                                                    <td class="text-danger">
                                                        @Html.DisplayFor(modelItem => item.t_adi)
                                                    </td>
                                                    <td class="text-success">
                                                         @Html.DisplayFor(modelItem => item.t_fiyat)
                                                    </td>

                                                </tr>*@
                                            <tr>
                                                <td>
                                                    @*<a onclick="SeciliHizmet('@item.t_id')" class="btn btn-default hzmt-btn btn-block">*@
                                                        @*@Html.DisplayFor(modelItem => item.t_id) - @Html.DisplayFor(modelItem => item.t_adi) -
                                                        @Html.DisplayFor(modelItem => item.t_fiyat)*@
                                                    @*</a>*@
                                                    <button class="btn btn-default hzmt-btn btn-block" id="disBtn" onclick="SeciliHizmet('@item.t_id','@item.t_adi','@item.t_fiyat')">
                                                        @Html.DisplayFor(modelItem => item.t_adi) -
                                                        @Html.DisplayFor(modelItem => item.t_fiyat)
                                                    </button>
                                                </td>
                                            </tr>

                                        }

                                        <!-- BODY BİTİŞİ -->
                                    </tbody>
                                </table>
                                <!-- start widget footer -->
                                <div class="dt-toolbar-footer no-padding">

                                </div>
                            @*</div>*@


                        </div>
                        <div class="tab-pane" id="tab2">
                            @* Tab 2 içerik *@
                            @Html.Action("OzelDurumList", "View_HastalikDurum", new { id = ViewBag.tc })
                        </div>

                    </div>
                </div>
            </div>
            <!-- end widget content -->
        </div>
        <!-- end widget div -->
    </div>
</article>
<style type="text/css">

    .hzmt-btn {
        /*border-color: #28a745;*/
        color: black;
    }

        .hzmt-btn:focus {
            color: #fff;
            box-shadow: 0 0 0 0.3rem rgba(40,167,69,.5);
            background-color: rgba(40,167,69,.5);
            border-color: rgba(40,167,69,.5);
        }

        .hzmt-btn:hover {
            color: #fff;
            background-color: rgba(40,167,69,.5);
            border-color: #28a745;
        }

        .hzmt-btn:active {
            color: #fff;
            background-color: rgba(40,167,69,.5);
            border-color: #28a745;
        }
</style>

<script type="text/javascript">
    function ClickRefresh() {
        $('#tab2').load(document.URL + ' #tab2');
    }

    $(document).ready(function () {
        var responsiveHelper_dt_basic = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;
        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };

        $('#dt_basic3').dataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
            "preDrawCallback": function () {
                // Initialize the responsive datatables helper once.
                if (!responsiveHelper_dt_basic) {
                    responsiveHelper_dt_basic =
                        new ResponsiveDatatablesHelper($('#dt_basic3'), breakpointDefinition);
                }
            },
            "rowCallback": function (nRow) {
                responsiveHelper_dt_basic.createExpandIcon(nRow);
            },
            "drawCallback": function (oSettings) {
                responsiveHelper_dt_basic.respond();
            }
        });

    });
</script>