
@model IEnumerable<WEINCDENTAL.Models.hst_basvuru>

@{
    ViewBag.Title = "Hasta Başvuru Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-leaf"></i>
            Başvurular
        </h1>

    </div>
    <section id="widget-grid">
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-collapsed="false" data-widget-sortable="false" data-widget-deletebutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-leaf"></i> </span>
                        <h2>Başvurular </h2>
                        <div class="widget-toolbar" role="menu">
                            <button class="btn btn-warning btn-lg" onclick="location.href='@Url.Action("Randevu_Index", "hst_randevu",new{tc=@ViewBag.tc})'">
                               Yeni Randevu
                            </button>
                            <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalCreateBasvuru">
                                Yeni Başvuru
                            </button>
                        </div>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <!-- this is what the user will see -->
                            <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline no-footer">
                                <!-- start widget head search-->
                                <div class="dt-toolbar no-padding">
                                </div>

                                <!-- end widget head search -->
                                <table id="dt_basic3" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <!-- HEAD BAŞLANGICI -->
                                            <th data-hide="phone,tablet" class="sorting_asc" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;"><i class="fa fa-fw fa-key text-muted hidden-md hidden-sm hidden-xs"></i> Başvuru Numarası</th>
                                            <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending" style="width: 50px;"><i class="fa fa-fw fa-key text-muted hidden-md hidden-sm hidden-xs"></i> T.C.</th>
                                            <th data-class="expand" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-sort="ascending" aria-label="ID: activate to sort column ascending" style="width: 30px;"><i class="fa fa-fw  fa-stethoscope text-muted hidden-md hidden-sm hidden-xs"></i> Başvuru Yapan Doktor</th>
                                            <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label=" Name: activate to sort column ascending" style="width: 50px;"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> Başvuru Tarihi</th>
                                            <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label=" Phone: activate to sort column ascending" style="width: 100px;"><i class="fa fa-times-circle-o text-muted hidden-md hidden-sm hidden-xs"></i> Taburcu Durumu</th>
                                            <th data-hide="phone,tablet" class="sorting" tabindex="0" aria-controls="dt_basic3" rowspan="1" colspan="1" aria-label=" Date: activate to sort column ascending" style="width: 50px;"><i class="fa fa-edit text-muted hidden-md hidden-sm hidden-xs"></i> İşlem Yap</th>
                                            <!-- HEAD BİTİŞİ -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- BODY BAŞLANGICI -->



                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_id)

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_tc)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_bölüm.t_adi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_basvurutarihi)
                                                </td>
                                                @if (item.t_taburcu)
                                                {
                                                    <td class="danger">
                                                        @Html.DisplayFor(modelItem => item.t_taburcu)
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="success">
                                                        @Html.DisplayFor(modelItem => item.t_taburcu)
                                                    </td>
                                                }

                                                    <td>
                                                        @if (item.t_taburcu)
                                                        {
                                                            <button class="btn-labeled btn-success btn disabled" data-toggle="modal">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-list"></i>
                                                                </span>Düzenle
                                                            </button>
                                                            <button class="btn btn-labeled btn-warning disabled">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-new-window"></i>
                                                                </span>Diş Hizmet Gir
                                                            </button>
                                                            <a class="btn btn-labeled btn-danger disabled">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-trash"></i>
                                                                </span>Sil
                                                            </a>
                                                            <a onclick="HTaburcuGeriAl('@item.t_id', '@item.hst_hastakarti.t_adi', '@item.hst_hastakarti.t_soyadi')" class="btn btn-labeled btn-info">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-export"></i>
                                                                </span>Taburcu Geri Al
                                                            </a>
                                                            <a onclick="GetHizmet('@item.t_id')" class="btn btn-labeled btn-default">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                                                </span>Hiz.Dökümü
                                                            </a>
                                                        }
                                                        else
                                                        {

                                                            <button onclick="Doldur(@item.t_id,@item.t_bolumkodu,@item.t_basvuru)" class="btn-labeled btn-success btn" data-toggle="modal" @*data-target="#myModalEdit" data-value="@item.t_id"*@>
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-list"></i>
                                                                </span>Düzenle
                                                            </button>

                                                            <a class="btn btn-labeled btn-warning" href="@Url.Action("HisHareket","HisHareket",new{@id=@item.t_id})">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-new-window"></i>
                                                                </span>Diş Hizmet Gir
                                                            </a>
                                                            <a onclick="Remove('@item.t_id', '@item.hst_hastakarti.t_adi', '@item.hst_hastakarti.t_soyadi')" class="btn btn-labeled btn-danger">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-trash"></i>
                                                                </span>Sil
                                                            </a>

                                                            <a onclick="HTaburcuEt('@item.t_id', '@item.hst_hastakarti.t_adi', '@item.hst_hastakarti.t_soyadi')" class="btn btn-labeled btn-info">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-export"></i>
                                                                </span>Taburcu Et
                                                            </a>
                                                            <a onclick="GetHizmet('@item.t_id')" class="btn btn-labeled btn-default">
                                                                <span class="btn-label">
                                                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                                                </span>Hiz.Dökümü
                                                            </a>

                                                        }

                                                    </td>
                                            </tr>


                                        }



                                        <!-- BODY BİTİŞİ -->
                                    </tbody>
                                </table>
                                <!-- start widget footer -->
                                <div class="dt-toolbar-footer no-padding">

                                </div>
                                <!-- end widget footer -->
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

                <div id="dinamikTable"></div>
            </article>
            <!-- WIDGET END -->



        </div>
    </section>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalCreateBasvuru" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">Başvuru Aç</h4>
            </div>
            <div class="modal-body">
                @Html.Action("HastaBPartialCreate", "hst_basvuru", new { @id = @ViewBag.tc })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default col-md-12 col-sm-12 col-xs-12 col-lg-12" data-dismiss="modal">
                    Kapat
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



<div class="modal fade" id="myModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel2">Başvuru Düzenle</h4>
            </div>
            <div class="modal-body">




                @using (Html.BeginForm("Edit", "hst_basvuru", FormMethod.Post, new { @class = "smart-form" }))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <center><h4>Hasta Başvuru Düzenle</h4></center>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Hidden("t_id")
                        @Html.Hidden("t_basvuru")
                        @Html.Hidden("t_tc", (string)ViewBag.tc)
                        <br />
                        <br />
                        <br />
                        <div class="row" style="padding-left: 30px;">
                            @Html.Label("T.C. No:", htmlAttributes: new { @class = "col-md-2 control-label " })
                            <section class="col-md-6">
                                <label class="input">
                                    @Html.Display("tc", (string)@ViewBag.tc)
                                    @*@Html.Editor("t_tc")*@

                                </label>
                            </section>
                        </div>

                        <div class="row" style="padding-left: 30px;">
                            @Html.Label("Doktor Seç:", htmlAttributes: new { @class = "col-md-2" })
                            <section class="col-md-6">
                                <label class="select">
                                    <i></i>
                                    @Html.DropDownList("t_bolumkodu", null, htmlAttributes: new { @class = "form-control", id = "doktor" })
                                </label>
                            </section>
                        </div>

                    </fieldset>
                    <footer>
                        <div class="col-md-offset-3 col-md-7">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                        </div>
                    </footer>

                }






            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default col-md-12 col-sm-12 col-xs-12 col-lg-12" data-dismiss="modal">
                    Kapat
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script src="~/Scripts/Remove.js"></script>
<script src="~/Scripts/WeincdentalScript.js"></script>
<script src="~/Scripts/jquery/jquery-1.9.1.min.js"></script>
@section pagespecific {
    <script type="text/javascript">


        function Doldur(bid,docid,basno) {
            document.getElementById("doktor").value = docid;
            $("#t_id").val(bid);
            $("#t_basvuru").val(basno);
            $("#myModalEdit").modal('show');
        }

        function Remove(id,ad,soyad) {
            $.SmartMessageBox({
                    title: "UYARI!",
                    //content:"Adı: "+ ad+" Soyadı: "+soyad + "olan hastanın başvurusu silinecektir. Emin misiniz?",
                    content:" Adı: "+ad+"<div> Soyadı: "+soyad+" olan hastanın başvurusu silinecektir.</div> <div><br></div><div>EMİN MİSİNİZ?</div>",
                    buttons: '[No][Yes]'
                },
                function (ButtonPressed) {
                    if (ButtonPressed === "Yes") {
                        BasvuruRemove(id);

                    }
                    if (ButtonPressed === "No") {
                        $.smallBox({
                            title: "İPTAL",
                            content: "<i class='fa fa-clock-o'></i> <i>Silme işleminden vazgeçildi...</i>",
                            color: "#C46A69",
                            iconSmall: "fa fa-times fa-2x fadeInRight animated",
                            timeout: 4000
                        });
                    }

                });
        }

        function HTaburcuEt(id, ad, soyad) {

            $.SmartMessageBox({
                    title: "UYARI!",
                    content:"Adı: "+ ad+" Soyadı: "+soyad + " olan hasta Taburcu edilecektir. Emin misiniz?",
                    buttons: '[No][Yes]'
                },
                function (ButtonPressed) {
                    if (ButtonPressed === "Yes") {
                        HastaTaburcuEt(id);

                    }
                    if (ButtonPressed === "No") {
                        $.smallBox({
                            title: "İPTAL",
                            content: "<i class='fa fa-clock-o'></i> <i>Taburcu işleminden vazgeçildi...</i>",
                            color: "#C46A69",
                            iconSmall: "fa fa-times fa-2x fadeInRight animated",
                            timeout: 4000
                        });
                    }

                });
        }

        function HTaburcuGeriAl(id, ad, soyad) {

            $.SmartMessageBox({
                title: "UYARI!",
                content: "Adı: " + ad + " Soyadı: " + soyad + " olan hasta Taburcusu geri alınacaktır. Emin misiniz?",
                buttons: '[No][Yes]'
            },
                function (ButtonPressed) {
                    if (ButtonPressed === "Yes") {
                        HastaTaburcuGeriAl(id);

                    }
                    if (ButtonPressed === "No") {
                        $.smallBox({
                            title: "İPTAL",
                            content: "<i class='fa fa-clock-o'></i> <i>Taburcu geri alma işleminden vazgeçildi...</i>",
                            color: "#C46A69",
                            iconSmall: "fa fa-times fa-2x fadeInRight animated",
                            timeout: 4000
                        });
                    }

                });
        }

        function GetHizmet(bid) {
            var gveri = bid;
            if (gveri == null) {
                $.smallBox({
                    title: "İPTAL",
                    content: "<i class='fa fa-clock-o'></i> <i>Hizmet getirilemedi...</i>",
                    color: "#C46A69",
                    iconSmall: "fa fa-times fa-2x fadeInRight animated",
                    timeout: 4000
                });
            } else {
                $('#dinamikTable').load("@Url.Action("PartialHizHareket", "View_HizHareket")", { id: gveri});
            }
        }



        $(document).ready(function () {

            var kayitdurum = @Html.Raw(Json.Encode(ViewBag.Message));
            if (kayitdurum==1) {
                $.smallBox({
                    title: "Kayıt İşlemi Başarılı oldu.",
                    content: "<i class='fa fa-clock-o'></i> <i>Az önce...</i>",
                    color: "#739E73",
                    iconSmall: "fa fa-thumbs-up bounce animated",
                    timeout: 4000
                });
            } else if(kayitdurum==2) {
                $.smallBox({
                    title: "Kayıt İşlemi Başarısız oldu.",
                    content: "<i class='fa fa-clock-o'></i> <i>Az önce...</i>",
                    color: "#cc1818",
                    iconSmall: "fa fa-times-circle bounce animated",
                    timeout: 4000
                });
            }

            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;
            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };

            $('#dt_basic3').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "preDrawCallback": function() {
                    // Initialize the responsive datatables helper once.
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic =
                            new ResponsiveDatatablesHelper($('#dt_basic3'), breakpointDefinition);
                    }
                },
                "rowCallback": function(nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function(oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });



        });


    </script>
}