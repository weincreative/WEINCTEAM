<script type="text/javascript">
    var list = [];
    var tblNo = 0;
    var secilenHizmet;
    var secilenDis;
    var hizmetAd;
    var hizmetFiyat;
    function SeciliHizmet(SHid, SHAd, SHFiyat) {
        secilenHizmet = SHid;
        hizmetAd = SHAd;
        hizmetFiyat = SHFiyat;
    }

    function SeciliDis(SDid) {
        secilenDis = SDid;
        if (secilenHizmet != null) {
            if (secilenDis == null) {
                $.smallBox({
                    title: "İPTAL",
                    content: "<i class='fa fa-clock-o'></i> <i>Seçili Diş getirilemedi...</i>",
                    color: "#C46A69",
                    iconSmall: "fa fa-times fa-2x fadeInRight animated",
                    timeout: 4000
                });
            } else {
                $.smallBox({
                    title: "OKAY",
                    content: "<i class='fa fa-clock-o'></i> <i>Seçili " + "Diş No : " + secilenDis + " Hizmet No : " + secilenHizmet + "</i>",
                    color: "#739E73",
                    iconSmall: "fa fa-thumbs-up bounce animated",
                    timeout: 4000
                });
                var result = TblEkle(list, tblNo,secilenDis, secilenHizmet, hizmetAd, hizmetFiyat);
                
                list = result[0];
                tblNo = result[1];
              
            }
        } else {
            $.smallBox({
                title: "İPTAL",
                content: "<i class='fa fa-clock-o'></i> <i>Hizmet Seçmediniz...</i>",
                color: "#cc1818",
                iconSmall: "fa fa-times-circle bounce animated",
                timeout: 4000
            });
        }
    }
  

    $('table').on('click', '.RemoveRow', function () {
        //Some code
        var btnName = this.name;
        var number = parseInt(btnName);
        $(this).closest('tr').remove();
       // listeden eleman çıkarma..
        list.splice(number, 1);

    });


    function Gonder() {

        $.ajax({
            type: "POST",
            data: JSON.stringify({ hst_his_hareket: list }),
            url: "../../hst_his_hareket/Create",
            contentType: "application/json"
        });
        list = [];
        tblNo = 0;
    }



</script>

