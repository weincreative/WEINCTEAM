                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_cinsiyet.t_adi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_medenidurum.t_adi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_dogumtarihi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_dogumyeri)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_tel1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_tel2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_ulke.CountryName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_il.t_adi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.hst_ilce.t_adi)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.t_adres)
                                                </td>

                                                <td>
                                                    <a onclick="Remove(@item.t_tc)" class="btn btn-labeled btn-danger">
                                                        <span class="btn-label">
                                                            <i class="glyphicon glyphicon-trash"></i>
                                                        </span>Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                        <!-- BODY BİTİŞİ -->
                                    </tbody>
                                </table>
                                <!-- start widget footer -->
                                <div class="dt-toolbar-footer no-padding">
                                </div>
                                <!-- end widget footer -->
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
    </section>
</div>

